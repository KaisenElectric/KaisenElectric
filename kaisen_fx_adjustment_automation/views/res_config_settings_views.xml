<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.account</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="40"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='default_accounts']" position="after">
                <h2>Schedule of Currency Adjustment Automation</h2>
                <div class="row mt16 o_settings_container" id="kaisen_fx_adjustment_automation">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="row mt8">
                                    <label for="kaisen_fx_adjustment_automation_date_shift" class="col-lg-4 o_light_label" string="Date shift" />
                                    <field name="kaisen_fx_adjustment_automation_date_shift"/>
                                </div>
                                <div class='mt8'>
                                    <button name="%(kaisen_fx_adjustment_automation.schedule_fx_adjustment_action)d" icon="fa-arrow-right" type="action" string="View Schedule" class="btn-link"/>
                                </div>
                                <div class='mt8'>
                                    <button name="%(kaisen_fx_adjustment_automation.schedule_fx_adjustment_log_action)d" icon="fa-arrow-right" type="action" string="View Schedule Log" class="btn-link"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
